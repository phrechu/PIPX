{
  "name": "pipx",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run pipx-web#dev",
    "dev:ext": "turbo run pipx-ext#dev",
    "build": "turbo run build",
    "format": "prettier --write \"**/*.{ts,tsx,md,astro}\"",
    "clean": "turbo run clean && rm -rf node_modules .turbo pnpm-lock.yaml",
    "check": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.13.1"
}
