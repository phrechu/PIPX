---
import { cn } from '@/lib/utils'

interface Props {
  class?: string
  open?: boolean
}

const { class: className, open = false, ...attrs } = Astro.props
---

<details
  class={cn('px-2 sm:px-0 rounded-2xl bg-[var(--off-black)]  mb-5 group', className)}
  name="faq"
  {...attrs}
  {...open ? { open: true } : {}}
>
  <slot name="trigger" />
  <slot name="content" />
</details>
