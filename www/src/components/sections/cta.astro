---
import Chrome from '@assets/icons/chrome.astro'
import Button from '@components/ui/button.astro'
---

<section class="use-motion flex flex-col items-center gap-6 pb-24 opacity-25">
  <span class="text-3xl font-bold">Wanna give it a try?</span>
  <Button
    href="https://chromewebstore.google.com/detail/nkbikckldmljjiiajklecmgmajgapbfl"
    class="ring-2 ring-[var(--lime)]"
    isBlank
  >
    <Chrome
      class="hover:text-shadow-[0_0_1.5rem_hsla(0,0%,100%,.5)] aspect-square w-6 fill-current font-[var(--lime)]"
    />Get PIPX</Button
  >
</section>
