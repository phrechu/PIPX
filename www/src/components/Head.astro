---
import { SiteDescription, SiteImage, SiteName, SiteTitle, SiteURL } from '../consts'
import SEO, { type Props as SEOProps } from './SEO.astro'

export type Props = Partial<SEOProps>
const {
  title = SiteTitle,
  name = SiteName,
  description = SiteDescription,
  canonicalURL = SiteURL,
  image = SiteImage,
  ...seo
} = Astro.props
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1.0" />
<meta name="generator" content={Astro.generator} />
<SEO {canonicalURL} {title} {description} {name} {image} {...seo} />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
